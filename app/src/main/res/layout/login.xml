<?xml version="1.0" encoding="utf-8"?><!-- Relative Layout used for layout and plainb background used from drawable folder-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plainb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.niall.lastmanstanding.MainActivity">
    <!-- Register Button used to direct user to register page -->
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="51dp"
        android:background="@drawable/mybutton"
        android:text="Register"
        android:textColor="#000000"
        android:textStyle="bold" />
    <!-- Login Button used to login to the app when correct details have been entered-->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/mybutton"
        android:text="Login"
        android:textColor="#000000"
        android:textStyle="bold" />
    <!-- EditText area to allow user to enter their password-->
    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="82dp"
        android:background="#FAFAFA"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#9da1a4" />
    <!--TextView to display Login to your account  -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Login to Your Account"
        android:textColor="#F5A739"
        android:textSize="30dp"
        android:textStyle="bold" />
    <!-- Edit Text area to allow user to enter thie username-->
    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/editText2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:background="#FAFAFA"
        android:focusable="true"
        android:hint="User Name"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHighlight="#FAFAFA"
        android:textColorHint="#9da1a4" />
</RelativeLayout>